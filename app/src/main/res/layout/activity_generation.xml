<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerationActivity">

    <ImageView
        android:id="@+id/generatedImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/generated_qr_code" />

    <EditText
        android:id="@+id/sourceEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/generatedImageView"
        android:layout_centerHorizontal="true"
        tools:ignore="LabelFor"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/button"
        android:text="@string/generate"
        style="@style/primary_btn"
        android:layout_below="@+id/sourceEdit"
        android:layout_centerHorizontal="true"
        android:onClick="onGenerate"/>
</RelativeLayout>